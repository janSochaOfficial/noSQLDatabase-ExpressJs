<div class="container">
    <div class="row my-5">
        <h1 class="col-12 text-center">
            add car page
        </h1>
    </div>
    {{#if succes}}
        <div class="row">
            <span class="alert alert-success col-12" role="alert">
                {{succes.text}} <a href="/list"></a>
            </span>
        </div>
    {{/if}}
